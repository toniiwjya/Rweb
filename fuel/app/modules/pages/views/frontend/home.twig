{% extends "pages/views/template_frontend.twig" %}

{% block home_slider %}
	<ul class="bxslider">
	  <li><img src="{{ base_url() }}assets/css/images/pic3.jpg" /></li>
	  <li><img src="{{ base_url() }}assets/css/images/pic3.jpg" /></li>
	</ul>
{% endblock %}

{% block frontend_content %}
	<div class="">
		News
		<hr>
		<div class="row" data-equalizer="news" data-equalize-on="medium">
			<div class="small-12 columns">
				<div class="small-4 columns" data-equalizer-watch="news">
					<img src="{{ base_url() }}assets/css/images/pic1.jpg">
				</div>
				<div class="small-8 columns pos-rel" data-equalizer-watch="news">
