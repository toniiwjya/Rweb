{% extends "pages/views/template_frontend.twig" %}

{% block frontend_center_content %}
    <div class="column profile">
        <div class="medium-8 medium-centered columns">
            {#<h2>Edit Profile</h2>#}
            {#<div class="medium-4 columns">#}
                {#<img src="http://lorempixel.com/200/200/people/9/" class="avatar img-circle img-thumbnail" alt="avatar">#}
                {#<h6>Upload a different photo...</h6>#}
                {#<input type="file" class="text-center center-block well well-sm">#}
            {#</div>#}
            <div class="medium-8 medium-centered small-12 columns form-profile">
                <h3>Edit your profile</h3>
                <form data-abide novalidate action="" method="post">
                    <label class="label-profile">Name</label>

                    <div class="small-12 columns no-padding">
                        <input type="text" value="{{ profile.fName }}" name="fName" required placeholder="Full Name">
                        <span class="form-error">
                            *Check your input
                        </span>
                    </div>

                    <div class="small-12 columns no-padding">
                        <label class="label-profile">Email</label>
                        <input type="email" value="{{ profile.email }}" name="email" disabled>
                        <span class="form-error">
                            *Check your input
                        </span>
                    </div>

                    <div class="small-12 columns no-padding">
                        <label class="label-profile">Phone</label>
                        <input type="text" value="{{ profile.phone }}" name="phone" required placeholder="+62" pattern="[0-9]">
                        <span class="form-error">
                            *Check your input
                        </span>
                    </div>

                    <fieldset>
                        <div class="small-12 medium-4 column text-label no-right-padding">
                            <label>Gender :</label>
                        </div>
                        <div class="small-12 medium-8 column">
                            <input type="radio" name="gender" value="Female" id="Female" required {{ profile.gender=='Female' ? 'checked' : ''}}><label for="Female">Female</label>
                            <input type="radio" name="gender" value="Male" id="Male" {{ profile.gender=='Male' ? 'checked' : ''}}><label for="Male">Male</label>
                        </div>
                    </fieldset>

                    <div class="small-12 columns no-padding">
                        <label class="label-profile">Address</label>
                        <textarea required name="address" required>{{ profile.address }}</textarea>
                        <span class="form-error">
                            *Check your input
                        </span>
                    </div>

                    <label for="pass">New Password :</label>
                    <input type="password" name="new-password" id="new-pass" placeholder="Minimal 6 Character">
                
                    <label for="re-pass">Retype New Password :</label>
                    <input type="password" id="re-pass" placeholder="Retype-Password"  data-equalto="new-pass">
                    <span class="form-error">
                        *Password not match
                    </span>

                    <div class="small-12 column error-msg">
                        {% if error_message is iterable %}
                            {% for error in error_message %}
                                {{ error.get_message() }}
                                    {{ loop.index > 0 ? '<br>' : '' }}
                                {% endfor %}
                            {% else %}
                                {{ error_message }}
                        {% endif %}
                    </div>
                    <div class="small-12 column success-msg">
                        {{ success_update }}
                    </div>
                    <div class="medium-12 columns save-btn">
                        <input type="submit" class="button" value="Save Changes">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}