{% extends "backend/template.twig" %}

{% block backend_content_header %}
<!-- Content Header (Page header) -->
<section class="content-header">
	<h1>{# Set page title and subtitle manually #}
		Dashboard
		<small>Change Password</small>
	</h1>
	{# Also set breadcrumb manually #}
	<ol class="breadcrumb">
		<li><a href="{{ base_url() }}backend">Home</a></li>
		<li>Dashboard</li>
		<li class="active">Change Password</li>
	</ol>
</section>
{% endblock %}

{% block backend_content %}
	<div class="form-box" id="login-box">
		{% if success_message | length > 0 %}
		<div class="alert alert-success alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			{{ success_message | raw }}
		</div>
		{% endif %}

		{% if error_message | length > 0 %}
		<div class="alert alert-danger alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			{{ error_message | raw }}
		</div>
		{% endif %}
		
		<form action="" method="post">
			<div class="body bg-gray">
				<div class="form-group">
					<input type="password" name="password_old" class="form-control" placeholder="Old Password" required />
				</div>
				<div class="form-group">
					<input type="password" name="password" class="form-control" placeholder="Password" required />
				</div>
				<div class="form-group">
					<input type="password" name="password_confirm" class="form-control" placeholder="Confirm Password" required />
				</div>
			</div>
			<div>
				<button type="submit" class="btn bg-olive btn-block">Change Password</button>
			</div>
		</form>
	</div>
{% endblock %}
